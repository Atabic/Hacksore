{
  "name": "hacksore",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "concurrently npm:dev npm:emulator",
    "emulator": "firebase emulators:start --import apps/api/seed",
    "dev": "turbo run start",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "deploy": "turbo run deploy --filter=web"
  },
  "devDependencies": {
    "concurrently": "^7.2.1",
    "prettier": "^2.5.1",
    "turbo": "^1.2.14"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  }
}
