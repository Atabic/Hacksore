{
  "name": "hacksore",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "concurrently npm:dev npm:emulator",
    "start:all": "concurrently npm:dev:all npm:emulator",
    "emulator": "firebase emulators:start --import private-seed",
    "dev": "turbo run start --filter=web",
    "dev:all": "turbo run start",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=web",
    "lint": "turbo run lint",
    "deploy": "firebase deploy && vercel deploy"
  },
  "devDependencies": {
    "concurrently": "^7.5.0",
    "prettier": "^2.7.1",
    "turbo": "^1.6.1"
  }, 
  "engines": {
    "node": ">=16.0.0"
  }
}
